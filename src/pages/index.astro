---
import BaseLayout from "../layouts/BaseLayout.astro";
import LandingPageHero from "../components/LandingPageHero.astro";
import Container from "../layouts/Container.astro";
import WhatToExpect from "../components/WhatToExpect.astro";
import FinancialProjections from "../components/FinancialProjections.astro";
import Experience from "../components/Experience.astro";
import CoreValuesSection from "../components/CoreValuesSection.astro";
import ContactUs from "../components/ContactUs.astro";
import Newsletter from "../components/Newsletter.astro";
---

<BaseLayout title="Home">
  <LandingPageHero />
  <Container layout="content">
    <WhatToExpect />
  </Container>
  <Container layout="full-bleed" theme="light">
    <FinancialProjections />
  </Container>

  <Container layout="full-bleed" theme="yellow">
    <Experience />
  </Container>

  <Container layout="full-bleed" theme="dark">
    <CoreValuesSection />
  </Container>

  <Container layout="content">
    <ContactUs />
  </Container>

  <Container layout="content">
    <Newsletter />
  </Container>
</BaseLayout>

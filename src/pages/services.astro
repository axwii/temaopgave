---
import BaseLayout from "../layouts/BaseLayout.astro";
import Container from "../layouts/Container.astro";

import EmployeeSection from "../components/EmployeeSection.astro";
import Newsletter from "../components/Newsletter.astro";
import OurVisionSection from "../components/OurVisionSection.astro";
import Hero from "../components/Hero.astro";
import Label from "../components/Label.astro";
import CoreValuesSection from "../components/CoreValuesSection.astro";
import FAQ from "../components/FAQ.astro";

const employeeData = await fetch(
  "https://raw.githubusercontent.com/axwii/frontend-design/main/resources/json/employees.json"
).then((res) => res.json());

const firstThreeEmployees = employeeData.slice(0, 3);
---

<BaseLayout title="Services">
  <Hero bgImage="creativeServicesHero.png" label="Services">Creative Services For Boost Your Business Growth</Hero>
  <Container>
    <OurVisionSection />
  </Container>
  <Container layout="full-bleed" theme="light">
    <CoreValuesSection />
  </Container>
  <Container layout="content">
      <Label>Our team</Label>
      <h2>We champion the bold to achieve the extraordinary</h2>
      <p>
        Ippsum is the result of synergy between our teams and our customers. Our
        company culture is focused on excellent productivity, customer
        satisfaction, respect for team.
      </p>
    <EmployeeSection data={firstThreeEmployees} />
  </Container>
  <Container>
    <FAQ />
  </Container>
  <Container layout="content">
    <Newsletter />
  </Container>
</BaseLayout>

<style>
    article {
        margin-top: 3rem;
    }
    
    h2 {
        margin: 1rem 0;
        max-width: 20ch;
    }
    
    p {
        margin: 1rem 0;
        max-width: 65ch;
    }
</style>

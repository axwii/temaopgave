---
import { Image } from "astro:assets";
import callIcon from '../assets/icons/call.svg';
import timeIcon from '../assets/icons/time.svg';
import pinIcon from '../assets/icons/pin.svg';

const { icon, altText, title, details } = Astro.props;

const icons = {
  'call': callIcon,
  'time': timeIcon,
  'pin': pinIcon,
};

const iconSrc = icons[icon];
---

<article>
  <Image src={iconSrc} alt={altText} />
  <div class="contactInfoText">
      <p class="title">{title}</p>
      <p class="details">{details}</p>
  </div>
</article>

<style>
  img {
    width: 3.25rem;
    height: 3.25rem;
  }
  .title {
    color: #595566;
    font-size: 16px;
    line-height: 147.5%;
  }
  .details {
    color: #181818;
    font-family: Cabin;
    font-weight: 600;
  }
  article {
    display: flex;
    gap: 16px;
    margin-block: 3.5rem;
  }
  .contactInfoText {
    flex-direction: column;
  }
</style>
---
const { title, icon } = Astro.props;
---
<div class="card">
    <img src={icon} alt="">
    <h4>{title}</h4>
    <p>
      <slot />
    </p>
    <p>Read More</p>
</div>

<style>
    .card {
        background-color: #fff;
        border-radius: 20px;
        padding: 3rem;
        margin-top: 3rem;
        width: 300px;
    }

    img {
        width: 50px;
        height: 50px;
    }

</style>

---
import Pie from "./Pie.astro";
import Label from "./Label.astro";
---

<section>
  <article>
    <Label color="white">Experience</Label>
    <h2>More than 25 years of experience</h2>
    <p>3000+ our clients are insured around the World</p>
  </article>
  <div class="pie-container">
    <div class="pie-content">
      <Pie percent={85} />
      <p>Consistency</p>
    </div>
    <div class="pie-content">
      <Pie percent={95} />
      <p>Improvement</p>
    </div>
    <div class="pie-content">
      <Pie percent={90} />
      <p>Branching</p>
    </div>
  </div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    margin-block: 2rem;
    gap: 2rem;
  }

  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .pie-container {
    display: flex;
    flex-wrap: wrap;
    gap: 35px;
    justify-content: center;
  }

  .pie-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;

    p {
      font-size: 1.3rem;
      font-weight: 600;
      font-family: Cabin;
    }
  }

  @media (min-width: 800px) {
    section {
      flex-direction: row;
      justify-content: space-between;
    }

    .pie-container {
      flex-wrap: nowrap;
      justify-content: flex-start;
    }
  }
</style>
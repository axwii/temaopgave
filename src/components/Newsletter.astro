div {
  font-size: 1rem;
  padding: 3rem 1.5rem;
  color: #fff;
  border-radius: 20px;
  background: #181818;
  overflow: clip;
  position: relative;
  isolation: isolate;
}

div h3 {
  font-size: 1.8rem;
  margin: 0 0 0.5rem;
  color: #fff;
}

div p {
  font-size: 1rem;
  margin: 0 0 1.5rem;
}

form {
  display: flex;
  gap: 1rem;
}

input {

  padding: 0.75rem 1rem;
  font-size: 1rem;
  border: none;
  border-radius: 50px;
  outline: none;
}

button {
  background-color: #FFCB85;
  border: none;
  border-radius: 50px;
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  color: #181818;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

button:hover {
  background-color: #F0BE7B;
}

div::before {
  --square-count: 12;
  --square-size: 1rem;
    

---
import EmployeeCard from "./EmployeeCard.astro";

const { data } = Astro.props;
---

<section>
  {data.map((employee) => <EmployeeCard {employee} />)}
</section>

<style>
  @layer components {
    section {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 51px;
    }
  }
</style>

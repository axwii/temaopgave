---
import Button from "./Button.astro";
---

<div class="container">
  <!-- Background Image -->
  <img src="assets/images/caseName.png" alt="" class="image" />

  <!-- Black Box Overlay -->
  <div class="black-box">
    <div class="info">
      <div class="info-item">
        <p class="label">Case Name</p>
        <p class="value">Taxes & Efficiency</p>
      </div>
      <div class="info-item">
        <p class="label">Category</p>
        <p class="value">Business</p>
      </div>
      <div class="info-item">
        <p class="label">Date</p>
        <p class="value">27th September 2022</p>
      </div>
    </div>
    <Button theme="secondary">Live Preview</Button>
  </div>
</div>

<style>
  .container {
    position: relative;
    width: 100%;
    margin: auto;
    margin-bottom: 100px;
  }

  .image {
    width: 100%;
    border-radius: 15px;
    object-fit: cover;
    margin-top: 100px;
  }

  .black-box {
    position: absolute;
    bottom: -60px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #1a1a1a;
    color: white;
    padding: 20px 30px;
    border-radius: 20px;
    width: 90%;
    height: 120px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .info {
    display: flex;
    gap: 100px;
  }

  .info-item {
    display: flex;
    flex-direction: column;
    margin-left: 30px;
    flex: 1 1 100%; /* Allow items to grow and shrink, and take full width on small screens */
  }

  .label {
    font-size: 16px;
    font-weight: bold;
    margin: 5px 0 0 0;
  }

  .value {
    font-size: 14px;
    color: #cccccc;
    margin: 0;
  }

  .live-preview-button {
    background-color: #f6c442;
    color: black;
    border: none;
    border-radius: 25px;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .live-preview-button:hover {
    background-color: #e5af39;
  }

  @media (max-width: 768px) {
    .info {
      gap: 20px; /* Reduce gap on smaller screens */
    }

    .info-item {
      margin-left: 0; /* Remove left margin on smaller screens */
    }

    .label {
      font-size: 14px; /* Adjust font size on smaller screens */
    }
  }
</style>
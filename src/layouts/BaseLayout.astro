---
import "../styles/global.css";
const { title = "" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} — AskExperts</title>
  </head>
  <body>
    <!-- <Header /> -->
    <main>
      <slot />
    </main>
    <footer>
      <div class="footerContent">
        <h1 class="logo">AskExperts</h1>
        <div class="divider"></div>
        <p>
          ©2022 Consultalk. All rights reserved | Terms of Service | Privacy
          Policy
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  footer {
    display: grid;
    place-items: center;
    padding: 20px;
    background-color: #000;

    .divider {
      width: 100%;
      height: 1px;
      background: #707070;
    }

    .footerContent {
      display: grid;
      grid-template-rows: auto auto auto;
      align-items: center;
      gap: 36px;
      width: 100%;
      max-width: 1200px;
      color: #fff;
      text-align: center;
    }
  }

  .logo {
    color: #fff;
    font-family: Cabin;
    font-size: 30px;
    font-style: normal;
    font-weight: 600;
  }
</style>

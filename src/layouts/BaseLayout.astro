---
import "../styles/global.css";
const { title = "" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="../src/styles/global.css" />
    <title>{title} — AskExperts</title>
  </head>
  <body>
    <header>
      <div class="Header">
        <h1 class="logo">AskExperts</h1>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="">Case Study</a></li>
          <li><a href="/team">Team</a></li>
          <li><a href="/services">About</a></li>
        </ul>
        <button>Login</button>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <div class="footerContent">
        <h1 class="logo">AskExperts</h1>
        <div class="divider"></div>
        <p>
          ©2022 Consultalk. All rights reserved | Terms of Service | Privacy
          Policy
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  header {
    background: rgba(27, 27, 27, 0.91);
  }

  .Header {
    margin: auto;
    max-width: 1200px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 25px;
    button {
      border-radius: 20px;
      background-color: #ffcc4a;
      color: #181818;
      font-family: "Lato", sans-serif;
      font-style: normal;
      line-height: 160%;
      padding: 4px 16px;

      /* Flexbox properties */
      display: flex;
      justify-content: center;
      align-items: center;
      align-self: center;
    }
    h1 {
      align-self: center;
    }
    ul {
      display: flex;
      list-style: none;
      padding-inline-start: 0px;
      justify-content: center;
      align-items: center;
      gap: 30px;
      li {
        margin: 0 20px 0 20px;
        font-family: Lato;
        font-size: 17.728px;
        font-style: normal;
        a {
          text-decoration: none;
          color: #fff;
        }
      }
    }
  }

  footer {
    display: grid;
    place-items: center;
    padding: 20px;
    background-color: #000;

    .divider {
      width: 100%;
      height: 1px;
      background: #707070;
    }

    .footerContent {
      display: grid;
      grid-template-rows: auto auto auto;
      align-items: center;
      gap: 36px;
      width: 100%;
      max-width: 1200px;
      color: #fff;
      text-align: center;
    }
  }

  .logo {
    color: #fff;
    font-family: Cabin;
    font-size: 30px;
    font-style: normal;
    font-weight: 600;
    line-height: 105%;
  }
</style>

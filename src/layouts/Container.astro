---
const { padding = "initial", layout = "full-bleed", theme } = Astro.props;
---

<section data-layout={layout} data-theme={theme} style=`--padding: ${padding}`>
  <slot />
</section>
<!-- <section data-layout={"full-bleed"} data-theme={theme}>
  <div data-layout={layout} style=`--padding: ${padding}`>
    <slot />
  </div>
</section> -->

<style>
  @layer components {
    section {
      /*Delete! */
      padding-block: var(--padding, 3rem);
      outline: 2px solid red;
      outline-offset: -2px;

      background: repeating-linear-gradient(
        45deg,
        #e9e9e9 0 5px,
        transparent 0 10px
      );
      /* background: var(--bg-section, #fff); */
    }
    div {
      padding-block: var(--padding, 3rem);
      outline: 2px solid red;
      outline-offset: -2px;
    }

    [data-layout="content"] {
      grid-column: content;
    }

    [data-layout="feature"] {
      grid-column: feature;
    }

    [data-layout="full-bleed"] {
      grid-column: full;
      display: grid;
      gap: inherit;
      grid-template-columns: subgrid;
      align-content: start;

      > * {
        grid-column: content;
      }
    }

    [data-theme="dark"] {
      --bg-section: #181818;
      --text-section: #fff;
      --bg-card: gainsboro;
      --text-card: #181818;
    }
  }
</style>
